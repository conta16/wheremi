    <!-- Tab panes -->
    <div class="tab-content h-100">
      <div role="tabpanel" class="tab-pane fade-in active show h-100" id="feed">

      </div>
      <div role="tabpanel" class="tab-pane fade-in h-100" id="inspect" >
      </div>
      <div role="tabpanel" class="tab-pane fade-in h-100" id="profile">
        <%if(user){%>
        <style>
        :root{
          --width-column: 100%;
          --width-percent-column: calc(var(--width-column)/100);
          --width-25-column: calc(var(--width-percent-column)*25);
        }
        /* Profile sidebar */
        .profile-sidebar {
          padding: 20px 0 10px 0;
          background: #fff;
        }

        .profile-userpic img {
          float: none;
          width: 50%;
          height: 50%;
        }

        .profile-usertitle {
          text-align: center;
          margin-top: 20px;
        }

        .profile-usertitle-name {
          color: #5a7391;
          font-size: 16px;
          font-weight: 600;
          margin-bottom: 7px;
        }

        .profile-usertitle-job {
          color: #5b9bd1;
          font-size: 12px;
          font-weight: 600;
          margin-bottom: 15px;
        }

        .profile-usermenu {
          margin-top: 1%;
          margin-left: 1%;
        }


        /* Profile Content */
        .profile-content {
          padding: 20px;
          background: #fff;
          min-height: 460px;
        }
            .card-container{
                height: 200px;
                overflow: scroll;
            }
            .image-cropper {
            width: 150px;
            height: 150px;
            position: relative;
            overflow: hidden;
            border-radius: 50%;
            display: inline-block; 
            margin: 0 auto;
            }
            .profile-pic {
            height: 100%;
            width: auto;
            display: inline;
            margin-left: -25%;
            }
            .bio-span{ 
              display: block;
              width: 100%;
              text-align: center;
            }
            .centering{
              width: 100%; 
              text-align: center;
            }

        </style>
        <script type="text/javascript">
          function aggiornaBio(){
            var x = $('#bioAggiornata');
            $.post("/newbio",{newbio: x.val()}, function(data){
                    if(data==='done')
                      {
                        alert("bio update ok");
                      }
                  });
          }


        </script>
        <body width="100%" height="100%">
        <div class="container ">
            <div class="row profile">
                <div class="col-lg-12">
        			<div class="profile-sidebar">
                <!-- SIDEBAR USERPIC -->
                <label for ="uploadpic">
                <div class ="centering">
        				<div class="image-cropper">
        					<img src="../img/standard_profile.jpg" class="profile-pic">
                </div>
                </label>
                <input id="uploadpic" type="file" style='display: none'/>
              </div>
        				<!-- END SIDEBAR USERPIC -->
        				<!-- SIDEBAR USER TITLE -->
        				<div class="profile-usertitle">
        					<div class="profile-usertitle-name bigger">
        						<%=user.username %>
        					</div>
        					<div class="profile-usertitle-job input-group">
                    <% if (!user.bio) { %>
                      <span class = "bio-span">
                      <input type="text" name="newBio" placeholder="Inserisci la tua nuova bio!" class="bio-container" id="bioAggiornata" style ="height: 35px;">
                      <span class="input-group-btn" style="border-radius: 4px;"><button class="btn btn-primary" type="button" onclick="aggiornaBio()" style="line-height: 21px;">Salva</button></span>
                      </span>

                      <% } else { %>
                      <span class = "bio-span"><%=user.bio %></span>
                    <% } %>
        					</div>
        				</div>
        				<!-- END SIDEBAR USER TITLE -->
        				<!-- SIDEBAR MENU -->
        				<div class="profile-usermenu">
        					<div class="card-container">

                  </div>
        				</div>
        				<!-- END MENU -->
                    </div>
                </div>
        </body>
      </div>
      <%}else{}%>

